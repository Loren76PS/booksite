{% extends 'base.html.twig' %}
{% block body %}
    <div id="contact" class="col-md-12" style="margin-top: 5vh">
        <div class="container">
            <div class="col-md-12" style="background: white; padding: 50px 50px 50px 50px;">
                <h1>Books</h1>
            </div>
            {% for libro in book %}
            <a href="book/{{ libro.idLibro }}">
                {% if loop.index0 is divisible by(2) %}
                    <div class="col-md-5" style="background: white; padding: 20px 20px 20px 20px; margin-top: 30px; height: 200px">
                {% else %}
                    <div class="col-md-5 col-md-offset-2" style="background: white; padding: 20px 20px 20px 20px; margin-top: 30px; height: 200px">
                {% endif %}
                        <div class="col-md-4">
                            <img class="img-thumbnail" src="{{ asset('images/books/')~libro.pathImagen }}" alt="">
                        </div>
                        <div class="col-md-8">
                            <h5>{{ libro.titulo }}</h5>
                            <i>{{ libro.autor }}</i>
                            {{ libro.puntuacion }}
                        </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>


{% endblock %}